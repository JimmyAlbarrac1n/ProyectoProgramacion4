@model BlogCore.Models.Pelicula
@{
    ViewData["Title"] = "Detalle Película";
}

<div class ="container ">
    <div class="card">
        <div class="card-heder bg-light text-light row">
            <div class="col-12 col-md-6">
                <h4 class="text-primary">@Model.Nombre</h4>
            </div>
        </div>
        <div class="card-body">
            <div class="col-12">
               <img src="@Model.UrlImagen" class="img-thumbnail mx-auto d-block" />
               <p class="text-secondary">@Html.Raw(Model.Sinopsis)</p>
                <h5 class="text-secondary">@Model.Precio</h5>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a asp-action="Index" class="btn btn-success btn-sm">
                        Volver atrás
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>