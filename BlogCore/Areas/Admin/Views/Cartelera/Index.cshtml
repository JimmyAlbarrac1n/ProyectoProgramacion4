@{
    ViewData["Title"] = "Lista de Peliculas";
}
<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Cartelera</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"> Agregar nueva clasificación </i></a>
        </div>
    </div>

    <br />
    <br />
    <table id="tblCartelera" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Clasificacion</th>
                <th>Genero</th>
                <th>Acciones</th>
            </tr>
        </thead>
        
    </table>
</div>

@section Scripts{
    <script src="~/js/cartelera.js"></script>
}