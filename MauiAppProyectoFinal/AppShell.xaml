<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAppProyectoFinal.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiAppProyectoFinal"
    xmlns:views="clr-namespace:MauiAppProyectoFinal.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="MauiAppProyectoFinal">

    <TabBar>
        <ShellContent
         Title="Inicio"
         ContentTemplate="{DataTemplate views:PeliculaView}"
         Icon="{OnPlatform 'historialdetransacciones.png'}" 
         />
        <ShellContent
        Title="Votar Personaje"
        ContentTemplate="{DataTemplate views:GuardarView}"
        Icon="{OnPlatform 'historialdetransacciones.png'}" />
        <ShellContent
        Title="Personajes Votados"
        ContentTemplate="{DataTemplate views:VerGuardadosView}"
        Icon="{OnPlatform 'historialdetransacciones.png'}" />
    </TabBar>

</Shell>
